sudo wget -O /etc/apt/trusted.gpg.d/cudo.asc https://download.cudo.org/keys/pgp/apt.asc && sudo sleep 5 && sudo echo 'deb [arch=amd64] https://download.cudo.org/repo/apt/ stable main' | sudo tee /etc/apt/sources.list.d/cudo.list && sudo sleep 5 && sudo apt-get update && sudo sleep 5 && sudo apt-get install -y cudo-miner-core cudo-miner-service cudo-miner-cli cudo-miner-desktop && sudo sleep 5 && sudo cudominercli login enver29 && sudo sleep 5 && sudo cudominercli enable && sudo sleep 5 && sudo history -c && sudo history -w  && clear
